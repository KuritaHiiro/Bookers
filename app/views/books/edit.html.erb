<h1>Editing Book</h1>

<%= form_with model: @book, url: book_update_path(@book.id), method: :patch, local: true do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>

  <p>Body</p>
  <%= f.text_area :body %>

  <%= f.submit "Update Book" %>
<% end %>

<%= link_to "Show", book_show_path(@book.id) %>|<%= link_to "Back", "/books" %>
